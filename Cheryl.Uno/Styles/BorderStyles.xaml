<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Border" x:Key="GlassBorderStyle">
        <Setter Property="CornerRadius" Value="20,20,20,20"></Setter>
        <Setter Property="Padding" Value="15"></Setter>
        <Setter Property="Background">
            <Setter.Value>
                <AcrylicBrush TintColor="{ThemeResource GlassCardBackground}" TintOpacity="{ThemeResource GlassOpacity}" />
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>

