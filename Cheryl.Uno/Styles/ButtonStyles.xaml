    <!-- Void Button Style -->
    <Style TargetType="Button" x:Key="VoidButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
