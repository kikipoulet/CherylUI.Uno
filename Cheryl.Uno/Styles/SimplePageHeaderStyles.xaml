<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Cheryl.Uno.Controls">
<Style TargetType="controls:SimplePageHeader">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SimplePageHeader">


                        <Border
                            BorderThickness="0"
                            Height="90"
                            VerticalAlignment="Top">

                            <Grid>


                                <Border  >
                                    <Border.Background>
                                        <AcrylicBrush TintLuminosityOpacity="0" TintOpacity="0" TintColor="Transparent"></AcrylicBrush>
                                    </Border.Background>
                                </Border>


                                <TextBlock IsHitTestVisible="False"
                                           FontSize="22"           HorizontalAlignment="Center"
                                           Margin="0,20,0,-10" FontFamily="{StaticResource QuicksandRegular}"
                                           Text="{TemplateBinding Header}"
                                           VerticalAlignment="Center" />

                            </Grid>
                        </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

