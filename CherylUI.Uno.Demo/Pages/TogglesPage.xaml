<Page
    x:Class="CherylUI.Uno.Demo.Pages.TogglesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CherylUI.Uno.Demo.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:Cheryl.Uno.Controls;assembly=Cheryl.Uno"
    mc:Ignorable="d"
    Background="Transparent">

    <controls:SliverPage Header="Toggles">
        <StackPanel Spacing="25">
            <controls:GroupBox Header="Switch">
                <ToggleSwitch HorizontalAlignment="Center" IsOn="True" />
            </controls:GroupBox>
            </StackPanel>
        </controls:SliverPage>
</Page>

